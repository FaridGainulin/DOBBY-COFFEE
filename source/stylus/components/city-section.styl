.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  padding-bottom 20px
  +above($breakpoints.sm)
    padding-bottom 40px
  +above($breakpoints.md)
    padding-bottom 70px
  +above($breakpoints.xxl)
    padding-bottom 102px

  &__out-wrapper
    background-image: url('../images/city-section-wrapper-bg.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    background-color #090703
    overflow hidden

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0
    +above($breakpoints.md)
      padding 60px 0
    +above($breakpoints.xxl)
      padding 114px 0 115px

  &__title-mark
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-green
      width: 103%;
      height: 98%;
      top: 0;
      left: -1.5%;

  &__sub-title
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0 15px
    +above($breakpoints.md)
      padding 25px 0 18px
    +above($breakpoints.xxl)
      padding 30px 0 21px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 566px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 200px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 278px !important

  &__agree-wrapper
    display: flex
    justify-content center
    padding-top 5px
    +above($breakpoints.sm)
      justify-content flex-start
      padding-top 0
      padding-left 10px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 32px
