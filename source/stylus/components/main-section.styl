.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center

  &__out-wrapper
    background-image: url('../images/main-section-wrapper-bg.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    background-color #090703
    overflow hidden

  &__container
    position relative
    z-index 1
    padding 20px 0 0
    text-align: center
    letter-spacing: -0.5px
    +above($breakpoints.sm)
      text-align: start
      padding 70px 0
    +above($breakpoints.md)
      padding 90px 0
    +above($breakpoints.xxl)
      padding 158px 0

  &__title-mark-orange
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-orange
      width: 103%;
      height: 98%;
      top: -3%;
      left: -1.5%;

  &__title-mark-green
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-green
      width: 103%;
      height: 98%;
      top: 0;
      left: -1.5%;

  &__sub-title
    padding 15px 0 10px
    +above($breakpoints.sm)
      padding 20px 0 15px
    +above($breakpoints.md)
      padding 25px 0 20px
    +above($breakpoints.xxl)
      padding 29px 0 25px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 566px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 200px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 278px !important

  &__agree-wrapper
    display: flex
    justify-content center
    padding-top 5px
    +above($breakpoints.sm)
      justify-content flex-start
      padding-top 0
      padding-left 10px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 32px

  &__img
    width: 280px;
    height: auto;
    margin: -48px 0 0 -17px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 470px;
      bottom: 52px;
      right: -52px;
    +above($breakpoints.md)
      width: 600px;
      bottom: 53px;
      right: -57px;
    +above($breakpoints.xxl)
      width 826px
      bottom: 61px
      right: -130px
