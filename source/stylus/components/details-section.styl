.details-section
  background-image: url('../images/details-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__container
    position relative
    z-index 1
    padding 20px 0 5px
    +above($breakpoints.sm)
      padding 30px 0
    +above($breakpoints.md)
      padding 60px 0
    +above($breakpoints.xxl)
      padding 114px 0

  &__img-bg-1
    position: absolute
    z-index -1
    width: 140px;
    height: auto;
    top: 43px;
    left: -61px;
    +above($breakpoints.sm)
      width: 150px;
      top: 112px;
      left: -94px;
    +above($breakpoints.md)
      width: 250px;
      top: 157px;
      left: -172px;
    +above($breakpoints.xxl)
      width 342px
      top: 225px
      left: -246px

  &__img-bg-2
    position: absolute
    z-index -1
    width: 80px;
    height: auto;
    top: 13px;
    right: -57px;
    +above($breakpoints.sm)
      width: 106px;
      top: 15px;
      right: -116px;
    +above($breakpoints.md)
      width: 150px;
      top: 40px;
      right: -177px;
    +above($breakpoints.xxl)
      width 220px
      top: 70px
      right: -259px

  &__title
    padding-bottom: 15px
    text-align: center
    color: $color-black-text
    +above($breakpoints.sm)
      padding 0
      text-align: start
      margin-bottom -92px
    +above($breakpoints.md)
      margin-bottom -123px
    +above($breakpoints.xxl)
      margin-bottom -148px

  &__title-mark
    position relative
    z-index 1
    color: #fff
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-orange
      width: 108%;
      height: 103%;
      top: 0%;
      left: -3%;

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      align-items: flex-end
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    +above($breakpoints.sm)
      width 235px !important
    +above($breakpoints.md)
      width 308px !important
    +above($breakpoints.xxl)
      width 380px !important

  &__card-img,
  &__card-img-mobile,
  &__card-img-desc
    width 100%
    height: auto

  &__card-img-mobile
    +above($breakpoints.sm)
      display: none

  &__card-img-desc
    display: none
    +above($breakpoints.sm)
      display: block
