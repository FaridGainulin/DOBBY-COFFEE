.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    padding 10px 0 5px
    +above($breakpoints.sm)
      padding 15px 0
    +above($breakpoints.md)
      padding 20px 0
    +above($breakpoints.xxl)
      padding 30px 0

  &__brand
    display: none
    +above($breakpoints.sm)
      flex-basis: 35%
      color: $color-black-text
      display: flex
      flex-direction: column
      gap: 3px
    +above($breakpoints.md)
      gap: 4px
    +above($breakpoints.xxl)
      gap: 5px

  &__logo
    width 70px
    height: auto
    +above($breakpoints.sm)
      width 85px
    +above($breakpoints.md)
      width 105px
    +above($breakpoints.xxl)
      width 112px

  &__call-me
    +above($breakpoints.sm)
      flex-basis: 35%
      display: flex
      justify-content flex-end

  &__brand-mobile
    text-align: center
    background-color $color-orange
    border-radius: 3px
    padding 3px 0
    margin-bottom 5px
    +above($breakpoints.sm)
      display: none
