.about-section
  background-image: url('../images/about-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__out-wrapper
    background-image: url('../images/about-section-wrapper-bg.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    background-color #947B5C
    overflow hidden

  &__container
    position relative
    z-index 1
    padding: 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 100px 0

  &__block-1
    display: flex
    flex-direction: column
    align-items: flex-end
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between

  &__block-1-inner
    width 100%
    +above($breakpoints.sm)
      width 405px
    +above($breakpoints.md)
      width 540px
    +above($breakpoints.xxl)
      width 662px

  &__title
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-bottom 15px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 8px
      margin-bottom 30px
    +above($breakpoints.md)
      gap: 10px
      margin-bottom 40px
    +above($breakpoints.xxl)
      gap: 12px
      margin-bottom 56px

  &__title-mark
    position relative
    z-index 1
    +above($breakpoints.sm)
      margin-left 11px
    +above($breakpoints.md)
      margin-left 12px
    +above($breakpoints.xxl)
      margin-left 15px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-orange
      width: 106%;
      height: 108%;
      top: -3%;
      left: -2.5%;

  &__block-1-text
    width 100%
    display: flex
    flex-direction: column
    gap: 7px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__text-item
    width 100%
    background-color $color-brown
    padding 10px
    +above($breakpoints.sm)
      padding 12px 5px 12px 12px
    +above($breakpoints.md)
      padding 16px 5px 16px 16px
    +above($breakpoints.xxl)
      padding 20px 5px 20px 20px

  &__img-1
    width 165px
    height: auto
    +above($breakpoints.sm)
      width 300px
    +above($breakpoints.md)
      width 395px
    +above($breakpoints.xxl)
      width 480px

  &__block-2
    width 100%
    display: flex
    flex-direction: column
    gap: 10px
    margin: -188px 0 10px;
    +above($breakpoints.sm)
      margin: 10px 0
      flex-direction: row
    +above($breakpoints.md)
      gap: 20px
      margin: 20px 0

  &__images
    display: flex
    flex-direction: column
    align-items: flex-start
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
    +above($breakpoints.md)
      gap: 20px

  &__img-2,
  &__img-3
    width auto
    height: 90px
    +above($breakpoints.sm)
      height: 118px
    +above($breakpoints.md)
      height: 151px
    +above($breakpoints.xxl)
      height: 194px

  &__block-2-text
    width 100%
    background-color $color-green
    padding 10px
    +above($breakpoints.sm)
      padding 12px 5px 12px 12px
      width 415px
    +above($breakpoints.md)
      padding 16px 5px 16px 16px
      width 554px
    +above($breakpoints.xxl)
      padding 20px 5px 20px 20px
      width 662px

  &__block-3
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
    +above($breakpoints.md)
      gap: 20px

  &__bottom
    width 100%
    background-image: url('../images/about-section-bottom-bg.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    background-color #080904
    display: flex
    flex-direction: column
    align-items: center
    padding 15px 5px
    +above($breakpoints.sm)
      align-items: flex-start
      width: 524px;
      padding: 15px 15px;
    +above($breakpoints.md)
      width: 675px;
      padding: 45px 35px;
    +above($breakpoints.xxl)
      width 854px
      padding 53px 59px 49px

  &__bottom-text
    padding 10px
    +above($breakpoints.sm)
      padding 15px 0
    +above($breakpoints.md)
      padding 18px 0
    +above($breakpoints.xxl)
      padding 22px 0

  &__form
    width 280px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 100%
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      gap: 7px
    +above($breakpoints.xxl)
      gap: 8px

  &__form-item
    +above($breakpoints.sm)
      width 160px !important
    +above($breakpoints.md)
      width 197px !important
    +above($breakpoints.xxl)
      width 240px !important

  &__agree-wrapper
    display: flex
    justify-content center
    margin-top 10px
    +above($breakpoints.sm)
      justify-content start

  &__img-4
    width 150px
    height: auto
    +above($breakpoints.sm)
      width 192px
    +above($breakpoints.md)
      width 270px
    +above($breakpoints.xxl)
      width 306px
