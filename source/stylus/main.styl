@font-face
  font-family 'Montserrat-Bold'
  src url('../fonts/Montserrat-Bold.woff'), url('../fonts/Montserrat-Bold.woff2')
  font-display swap
@font-face
  font-family 'Montserrat-Medium'
  src url('../fonts/Montserrat-Medium.woff'), url('../fonts/Montserrat-Medium.woff2')
  font-display swap
@font-face
  font-family 'Montserrat-Regular'
  src url('../fonts/Montserrat-Regular.woff'), url('../fonts/Montserrat-Regular.woff2')
  font-display swap
@font-face
  font-family 'Montserrat-SemiBold'
  src url('../fonts/Montserrat-SemiBold.woff'), url('../fonts/Montserrat-SemiBold.woff2')
  font-display swap

@font-face
  font-family 'HARRY-POTTER-Regular'
  src url('../fonts/HARRY-POTTER-Regular.woff'), url('../fonts/HARRY-POTTER-Regular.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'Montserrat-Medium'
  font-weight 500
  line-height 120%
  color $color-white
  background-color #EEE5D6

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.out-wrapper
  max-width 370px
  margin 0 auto
  width 100%
  border-radius: 15px
  +above($breakpoints.sm)
    max-width 830px
    border-radius: 20px
  +above($breakpoints.md)
    max-width 1080px
    border-radius: 30px
  +above($breakpoints.xxl)
    max-width 1440px
    border-radius: 40px

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
